{
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "https://rodrigogarcia.me"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; connect-src 'self' https://cdn.skypack.dev; font-src 'self' https://fonts.gstatic.com; script-src 'self' https://cdn.skypack.dev; style-src 'self' 'unsafe-inline'"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2592000"
          }
        ]
      }
    ]
  }
}
